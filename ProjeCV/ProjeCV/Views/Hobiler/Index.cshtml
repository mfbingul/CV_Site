@model ProjeCV.Models.Sinif.Class1
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>HOBİLER</th>
            <th>GÜNCELLE</th>
            <th>SİL BUTONU</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model.Deger5)
        {   
        <tr>
            <th>@x.ID</th>
            <td>@x.INTERESTS</td>
            <td><a href="/Hobiler/HobiGetir/@x.ID" class="btn btn-success">Güncelle</a></td>
            <td>@Html.ActionLink("Sil Butonu", "Sil", new { id = x.ID }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek İstiyor Musunuz')" })</td>
        </tr>
        }
    </tbody>
</table>
<a href="/Hobiler/YeniHobi/" class="btn btn-info">Yeni Hobi Ekle</a>